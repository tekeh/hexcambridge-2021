#:kivy 1.1.0

# Colors taken from https://flatuicolors.com/palette/defo

#:import hex kivy.utils.get_color_from_hex

#:import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
	transition: FadeTransition()
	MainScreen:
	OwnerScreen:
    ReceiverScreen:

<MainScreen>:
	name: "main"

    GridLayout:
        spacing: (40,200)
        padding: (60,20)
        rows: 3
        cols: 2
        canvas:
            Color:
                rgba: 256,256,256,1
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            padding: 0,0
    		Image:
    			source: 'c-hive-logo.png'

            Label:
                text:'cHive'
                color: hex('#8e44ad')
                font_size:50

        BoxLayout:


        BoxLayout:
        	Button:
                background_color: hex('#e67e22')
                background_normal: ''
        		on_release: app.root.current = "owner"
        		text: "I have data"
        		font_size: 50

        BoxLayout:
            Button:
                background_color: hex('#e67e22')
                background_normal: ''
                on_release: app.root.current = "receiver"
                text: "Happy to help"
                font_size: 50

<OwnerScreen>:
    name: "owner"

    GridLayout:
        spacing: (40,40)
        padding: (60,20)
        rows: 9
        cols: 2
        canvas:
            Color:
                rgba: 256,256,256,1
            Rectangle:
                size: self.size
                pos: self.pos

    	BoxLayout:
            padding: 0,0
    		Image:
    			source: 'c-hive-logo.png'

            Label:
                text:'cHive'
                color: hex('#8e44ad')
                font_size:50

        BoxLayout:


        BoxLayout:
            Label:
                text: 'Input data'
                color: (0,0,0,1)
        BoxLayout:
            Button:
                size: (20,50)
                background_color: hex('#eeeeee')
                background_normal: ''
                color: 0,0,0,1
                text: 'Load...'
                on_release: root.show_load()


        BoxLayout:
            Label:
                text: 'Encryption'
                color: (0,0,0,1)
        BoxLayout:
            Button:
                background_color: hex('#e67e22')
                background_normal: ''
                color: 1,1,1,1
                text: 'Encrypt!'
                #on_press:
                on_release: root.encrypt_and_compute()


        BoxLayout:
            Label:
                text: 'Status'
                color: (0,0,0,1)
        BoxLayout:
            Label:
                text: 'Idle'
                color: (0,0,0,1)

        BoxLayout:
            Label:
                text: 'Result'
                color: (0,0,0,1)
        BoxLayout:
            Button:
                background_color: hex('#27ae60')
                background_normal: ''
                color: 1,1,1,1
                text: root.beta_result

        BoxLayout:
            Button:
                on_release: app.root.current = "main"
        		text: "Back"
        		font_size: 50



<ReceiverScreen>
    name: "receiver"

    GridLayout:
        spacing: (60,60)
        padding: (200,200)
        rows: 2
        cols: 1
        canvas:
            Color:
                rgba: 256,256,256,1
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:

    	    Image:
                source: 'bee.gif'

            Button:
                background_color: hex('#27ae60')
                background_normal: ''
                size: (20,50)
                text: "I am ready"
                on_release: root.listen()
                font_size: 40
        BoxLayout:
            Button:
                background_color: hex('#e67e22')
                background_normal: ''
                on_release: app.root.current = "main"
                size: (20,50)
                text: "Back"
                font_size: 50



<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
        # FileChooserIconView:
            id: filechooser
            path: './'

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)
